" Plugins
set matchit
set NERDTree

# Editing
set clipboard=unnamed

" Replace with IDE's functions
map K <Action>(QuickJavaDoc)
map / <Action>(Find)
map ? <Action>(FindUsages)
map n <Action>(FindNext)
map N <Action>(FindPrevious)
map <C-o> <Action>(Back)
map <C-i> <Action>(Foward)
map g; <Action>(JumpToLastChange)
map g, <Action>(JumpToNextChange)

" Easy access to IDE's functions
let mapleader = " "
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>r <Action>(Refactorings.QuickListPopupAction)
map <leader>d <Action>(Debug)
map <leader>e <Action>(NERDTreeToggle)
map <leader>= <Action>(ReformatCode)
map <leader>t <Action>(ActivateTerminalToolWindow)
map <leader>o <Action>(OptimizeImports)
map <leader>q <Action>(QuickImplementations)

map <leader>N <Action>(NewElement)
map <leader>G <Action>(Generate)
map <S-Space> <Action>(GotoNextError)
